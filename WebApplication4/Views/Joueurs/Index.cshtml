            };

    int equipeChoisie;
    string request = Request.QueryString["equipe"];

    int.TryParse(request, out equipeChoisie);
}
<div class="all">
    <h2>Joueurs</h2>

    <div class="libEquipes">
        @for (int i = 0; i < equipes.Length; i++)
        {
            <a class="btnEquipe" href="@Url.Action("Index", new { equipe = i + 1})" class="@(lib[i])" @(equipeChoisie == i ? "style=\"background-color: black; color: white; \"" : "")>@(lib[i])</a>
        }
    </div>

    <div class="table">
        @foreach (var item in Model)
        {
            <div class="joueur">
                <div class="photo">
                    <img src="~/Images/Joueurs/joueur_@(item.ID_Joueur).jpg" height="250px" />
                </div>
                <div class="infoJoueur">
                    <div class="nom">@(item.PRENOM_Joueur) @(item.NOM_Joueur)</div>
                    <div class="equipe">@(item.Equipes.NOM_Equipe)</div>
                </div>
            </div>
        }

    </div>
</div>


<style>
    * {
        margin: 0;
    }

    body {
        margin: 0;
    }

    .all {
        padding-top: 150px;
    }

        .all h2 {
            font-size: 50px;
            margin-left: 50px;
        }

    .table {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
    }

    .joueur {
        width: max-content;
        margin: 15px;
    }

    .photo img {
        margin: auto;
    }

    .nom {
        font-weight: bold;
        text-transform: uppercase;
        text-align: center;
