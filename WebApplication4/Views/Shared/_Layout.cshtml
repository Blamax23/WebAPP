<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav>
        <div class="logoNBA">
            <img src="~/Images/Logos/NBA.png" height="50vh"/>
        </div>
        <ul>
            <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
            <li>@Html.ActionLink("Equipes", "Index", "Equipes", new { conference = "ouest" }, null)</li>
            <li>@Html.ActionLink("Joueurs", "Index", "Joueurs")</li>
            <li>@Html.ActionLink("Matchs", "Index", "Matchs")</li>
            <li>@Html.ActionLink("5 de légende", "Index", "CinqLegende")</li>
        </ul>
    </nav>

    @RenderBody()

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>

<style>
    *:hover {
        cursor: url("../../Images/Autre/ball.png"), pointer;
    }

    nav {
        background-color: black;
        color: white;
        display: flex;
        flex-wrap: nowrap;
        justify-content: space-around;
        padding: 10px 0 10px 0;
        width: 100%;
        position: fixed;
        z-index: 100;
    }

    ul{
        margin: 0;
        display: flex;
        flex-wrap: nowrap;
        list-style: none;
    }

    li {
        margin: 5px;
        text-transform: uppercase;
        color: #FFF;
        text-decoration: none;
        font: 15px Raleway;
        padding: 10px 5px;
        position: relative;
        z-index: 0;
        cursor: pointer;
        height: min-content;
    }

    a {
        text-decoration: none;
        color: white;
    }

    li:before {
        position: absolute;
        width: 100%;
        height: 2px;
        left: 0px;
        bottom: 0px;
        content: '';
        background: #FFF;
        opacity: 0.3;
        transition: all 0.3s;
    }
</style>